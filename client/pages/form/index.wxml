<view class="page-body">
  <view class="page-section">
    <view class="weui-cells__title">比赛类型</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" data-key='type' value="{{type}}" bindchange="bindInput" maxlength="10" placeholder="例如：七人比赛"/>
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">比赛地点：</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" data-key='position' value="{{position}}" bindchange="bindInput" maxlength="10" placeholder="场地名称"/>
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">比赛时间</view>
    <view class="weui-cells weui-cells_after-title">
      <picker mode="date" data-key='date' value="{{date}}" bindchange="bindInput" start="2015-09-01" end="2017-09-01">
        <view class="picker">
          当前选择: {{date}}
        </view>
      </picker>
      <picker mode="time" data-key='time' value="{{time}}" bindchange="bindInput" start="09:01" end="21:01">
        <view class="picker">
          当前选择: {{time}}
        </view>
      </picker>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">最大参数人数</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" data-key='max_numbers' value="{{max_numbers}}" bindchange="bindInput" placeholder="例如：40" />
      </view>
    </view>
  </view>

  <view class="page-section">
    <view class="weui-cells__title">提示队员注意事项</view>
    <view class="weui-cells weui-cells_after-title">
      <view class="weui-cell weui-cell_input">
        <input class="weui-input" data-key='matchTips' value="{{matchTips}}" bindchange="bindInput" maxlength="10" placeholder="例如：不能穿长钉鞋哦"/>
      </view>
    </view>
  </view>

  <view>
    <button type="primary" size="default" loading="{{loading}}" disabled="{{disabled}}" bindtap="primary" bindtap="submit">submit</button>
  </view>
</view>